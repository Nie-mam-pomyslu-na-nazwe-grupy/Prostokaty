<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo1"
    tools:context=".PlayersNumber">

    <ImageButton
        android:id="@+id/graczy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginTop="100dp"
        android:src="@drawable/graczy2" />

    <ImageButton
        android:id="@+id/graczy3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_below="@id/graczy2"
        android:layout_marginTop="15dp"
        android:src="@drawable/graczy3" />

    <ImageButton
        android:id="@+id/graczy4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_below="@id/graczy3"
        android:layout_marginTop="15dp"
        android:src="@drawable/graczy4" />


</RelativeLayout>